<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:id="@+id/deleteNoteContainer"
    android:layout_margin="@dimen/_10sdp"
    android:background="@color/colorPrimary">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_25sdp"
        android:id="@+id/deleteNoteimage"
        android:layout_marginStart="@dimen/_8sdp"
        android:src="@drawable/ic_delete"
        android:tint="@color/fbutton_color_clouds"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_height="@dimen/_25sdp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:fontFamily="@font/ubuntu_bold"
        android:includeFontPadding="false"
        android:text="Delete Note"
        android:textColor="@color/fbutton_color_clouds"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintBottom_toBottomOf="@id/deleteNoteimage"
        app:layout_constraintTop_toTopOf="@id/deleteNoteimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/deleteNoteimage"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/deleteNoteMessage"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:fontFamily="@font/ubuntu_mono"
        android:text="Are you sure want to delete?"
        android:textColor="@color/fbutton_color_clouds"
        android:textSize="@dimen/_13sdp"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/deleteNoteimage"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/deleteText"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:fontFamily="@font/ubuntu_mono"
        android:includeFontPadding="false"
        android:textAllCaps="true"
        android:text="Delete"
        android:textColor="@color/fbutton_color_pumpkin"
        android:textSize="@dimen/_14sdp"
        android:padding="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deleteNoteMessage"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/cancel"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:fontFamily="@font/ubuntu_mono"
        android:includeFontPadding="false"
        android:textAllCaps="true"
        android:text="Cancel"
        android:textColor="@color/fbutton_color_sun_flower"
        android:textSize="@dimen/_14sdp"
        android:padding="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deleteNoteMessage"
        app:layout_constraintEnd_toStartOf="@id/deleteText" />

</androidx.constraintlayout.widget.ConstraintLayout>